<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base shape with darker background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#151515" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Inner gradient for subtle glow effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#334285F4"
                android:centerColor="#264285F4"
                android:endColor="#1A4285F4" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Outer stroke for definition -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke 
                android:color="#404285F4"
                android:width="1dp" />
        </shape>
    </item>
</layer-list> 