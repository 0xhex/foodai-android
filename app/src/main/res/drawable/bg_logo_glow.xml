<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost Glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20FF9500"/>
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
    <!-- Outer Glow -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#40FF9500"/>
            <size
                android:width="44dp"
                android:height="44dp"/>
        </shape>
    </item>
    <!-- Middle Glow -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#60FF9500"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
    <!-- Inner Glow -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#90FF9500"/>
            <size
                android:width="36dp"
                android:height="36dp"/>
        </shape>
    </item>
</layer-list> 