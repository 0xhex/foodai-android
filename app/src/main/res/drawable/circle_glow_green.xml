<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4D00FF00"/> <!-- 30% opacity green -->
            <size
                android:width="70dp"
                android:height="70dp"/>
        </shape>
    </item>

    <!-- Middle glow layer -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#3300FF00"/> <!-- 20% opacity green -->
            <size
                android:width="60dp"
                android:height="60dp"/>
        </shape>
    </item>

    <!-- Inner glow layer -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#1A00FF00"/> <!-- 10% opacity green -->
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
</layer-list> 