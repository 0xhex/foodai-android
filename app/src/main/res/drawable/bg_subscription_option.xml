<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#12FF9500" />
                    <corners android:radius="12dp" />
                    <padding android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>
            
            <!-- White background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/custom_white" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Orange border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.5dp" android:color="@color/orange" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#0D000000" />
                    <corners android:radius="12dp" />
                    <padding android:bottom="1dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
                </shape>
            </item>
            
            <!-- White background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/custom_white" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Light gray border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/custom_light_gray" android:alpha="0.15" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 