<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
        </shape>
    </item>
    
    <!-- Background -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#274247"/>
            <stroke
                android:width="0.5dp"
                android:color="#80FFFFFF"/>
        </shape>
    </item>
</layer-list> 