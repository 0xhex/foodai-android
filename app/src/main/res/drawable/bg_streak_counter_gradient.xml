<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:endColor="#00FF9800"
                android:centerColor="#40FF9800"
                android:startColor="#40FF9800"
                android:type="radial"
                android:gradientRadius="30dp"/>
        </shape>
    </item>
    
    <!-- Main Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:endColor="#1AFF9800"
                android:startColor="#1AFF9800"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#FF9800" />
        </shape>
    </item>
</layer-list> 