<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:type="linear"
                android:angle="0">
                <item android:color="#037AFF" android:offset="0.0" />   <!-- iOS Blue -->
                <item android:color="#34C759" android:offset="0.25" />  <!-- iOS Green -->
                <item android:color="#FFD60A" android:offset="0.5" />   <!-- iOS Yellow -->
                <item android:color="#FF9500" android:offset="0.75" />  <!-- iOS Orange -->
                <item android:color="#FF3B30" android:offset="1.0" />   <!-- iOS Red -->
            </gradient>
        </shape>
    </item>
</layer-list> 