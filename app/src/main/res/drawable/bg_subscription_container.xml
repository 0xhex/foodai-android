<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:angle="270"
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#F5F5F5"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Decorative orange circle -->
    <item android:gravity="start|top">
        <shape android:shape="oval">
            <size
                android:width="200dp"
                android:height="200dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#08FFA500"
                android:endColor="#00FFA500"/>
        </shape>
    </item>

    <!-- Decorative green circle -->
    <item android:gravity="end|bottom">
        <shape android:shape="oval">
            <size
                android:width="150dp"
                android:height="150dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="75dp"
                android:startColor="#084CAF50"
                android:endColor="#004CAF50"/>
        </shape>
    </item>

    <!-- Wave pattern -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:angle="90"
                android:centerColor="#05FFA500"
                android:endColor="#00FFA500"
                android:startColor="#00FFA500"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Subtle border gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:angle="270"
                android:startColor="#10FFFFFF"
                android:endColor="#10000000"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#0A000000"/>
        </shape>
    </item>

    <!-- Top shadow -->
    <item android:top="-6dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#08000000"
                android:endColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Bottom shadow -->
    <item android:bottom="-6dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#08000000"
                android:endColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>
</layer-list> 