<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/custom_dark_gray"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Profile Picture/Initial -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/euro_stile_regular"
                        tools:text="Username"/>

                    <TextView
                        android:id="@+id/txt_country_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/euro_stile_bold"
                        android:textColor="@color/white"
                        tools:text="ðŸ‡¹ðŸ‡·"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginVertical="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/euro_stile_regular"
                tools:text="Description text goes here"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginVertical="16dp"/>

            <!-- User Stats ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:spacing="8dp">

                    <!-- Goal Chip -->
                    <include
                        android:id="@+id/chip_goal"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <!-- Weight Chip -->
                    <include
                        android:id="@+id/chip_weight"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <!-- Target Weight Chip -->
                    <include
                        android:id="@+id/chip_target"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <!-- Workouts Chip -->
                    <include
                        android:id="@+id/chip_workouts"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <!-- Diet Chip -->
                    <include
                        android:id="@+id/chip_diet"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginVertical="16dp"/>

            <!-- Likes and Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/soft_blue"
                    android:fontFamily="@font/euro_stile_regular"
                    tools:text="5 likes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="@color/soft_blue"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/euro_stile_regular"
                    tools:text="Feb 26, 2024"/>
            </LinearLayout>

            <!-- Like Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/euro_stile_regular"
                app:icon="@drawable/ic_heart"
                app:iconTint="@color/red"
                android:text="Like"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/custom_dark_gray"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>