<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/custom_dark_gray"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!-- Profile Picture/Initial -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/gray"
                        app:shapeAppearanceOverlay="@style/CircleImageView" />

                    <TextView
                        android:id="@+id/txt_profile_letter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/euro_stile_bold"
                        android:textSize="20sp"
                        tools:text="F" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euro_stile_regular"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        tools:text="Username" />

                    <TextView
                        android:id="@+id/txt_country_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/euro_stile_bold"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        tools:text="ðŸ‡¹ðŸ‡·" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#33FFFFFF" />

            <!-- Description -->
            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/euro_stile_regular"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Description text goes here" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#33FFFFFF" />

            <!-- User Stats ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Goal Chip -->
                    <include
                        android:id="@+id/chip_goal"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Weight Chip -->
                    <include
                        android:id="@+id/chip_weight"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Target Weight Chip -->
                    <include
                        android:id="@+id/chip_target"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Workouts Chip -->
                    <include
                        android:id="@+id/chip_workouts"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Diet Chip -->
                    <include
                        android:id="@+id/chip_diet"
                        layout="@layout/view_info_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#33FFFFFF" />

            <!-- Likes and Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euro_stile_regular"
                    android:textColor="@color/soft_blue"
                    android:textSize="14sp"
                    tools:text="5 likes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="@color/soft_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euro_stile_regular"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    tools:text="Feb 26, 2024" />
            </LinearLayout>

            <!-- Like Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/custom_dark_gray"
                android:fontFamily="@font/euro_stile_regular"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Like"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_heart"
                app:iconTint="@color/red" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>