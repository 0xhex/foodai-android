<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#1A1B1C"
        app:strokeColor="@color/white"
        app:strokeWidth="0.5dp"
        app:cardElevation="4dp">

        <!-- Initial View (When not expanded) -->
        <LinearLayout
            android:id="@+id/nutrition_details_initial_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_glow"
                        android:alpha="0.3" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/green" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutritional_information"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/euro_stile_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/get_in_depth_info"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:fontFamily="@font/euro_stile_regular"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_analyze_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Analyze Nutrition"
                android:textColor="@color/white"
                app:backgroundTint="@color/orange"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_sparkles"
                app:iconTint="@color/white"
                app:iconGravity="textStart" />
        </LinearLayout>

        <!-- Loading View -->
        <LinearLayout
            android:id="@+id/nutrition_details_loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/orange" />

            <TextView
                android:id="@+id/txt_loading_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/calculating_nutritional_values"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/euro_stile_regular"
                android:gravity="center" />
        </LinearLayout>

        <!-- Error View -->
        <LinearLayout
            android:id="@+id/nutrition_details_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_warning"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Failed to get nutrition details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/euro_stile_bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/euro_stile_regular"
                android:gravity="center"
                tools:text="Error message details" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Try Again"
                android:textColor="@color/white"
                app:backgroundTint="@color/blue"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- Premium Required View -->
        <LinearLayout
            android:id="@+id/nutrition_details_premium_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_star_premium"
                app:tint="@color/amber" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Premium Required"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/euro_stile_bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Unlock detailed nutrition analysis with premium"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/euro_stile_regular"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upgrade to Premium"
                android:textColor="@color/white"
                app:backgroundTint="@color/amber"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- Nutrition Details View (When data is loaded) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nutrition_details_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutritional Profile"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/euro_stile_bold" />

                <!-- Fiber Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/custom_dark_gray_new"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:cardCornerRadius="22dp"
                            app:cardBackgroundColor="#173920"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/fiber_emoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="24sp"
                                android:text="ðŸ¥¦" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dietary Fiber"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:fontFamily="@font/euro_stile_bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:id="@+id/txt_fiber_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/euro_stile_bold"
                                    tools:text="3g" />

                                <TextView
                                    android:id="@+id/txt_fiber_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textColor="@color/green"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/euro_stile_regular"
                                    tools:text="(12% daily value)" />
                            </LinearLayout>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <ProgressBar
                                android:id="@+id/fiber_progress_background"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="100"
                                android:progressDrawable="@drawable/progress_bar_minimal" />

                            <ProgressBar
                                android:id="@+id/fiber_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="25"
                                android:progressDrawable="@drawable/progress_bar_green"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/txt_fiber_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/euro_stile_bold"
                                tools:text="12%" />
                        </FrameLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tabs for Vitamins and Minerals -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/nutrition_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:tabBackground="@color/custom_dark_gray_new"
                    app:tabIndicator="@color/orange"
                    app:tabIndicatorColor="@color/orange"
                    app:tabIndicatorHeight="3dp"
                    app:tabTextColor="@color/gray"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@style/TabTextAppearance" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/nutrition_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/custom_dark_gray_new" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>
</layout>