<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:gravity="center"
    tools:background="@color/custom_black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day_letter"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/circle_background"
        android:fontFamily="@font/euro_stile_regular"
        android:textColor="@color/white"
        tools:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26sp"
        tools:text="T" />

    <TextView
        android:id="@+id/txt_day"
        app:layout_constraintTop_toBottomOf="@id/day_letter"
        app:layout_constraintStart_toStartOf="@id/day_letter"
        app:layout_constraintEnd_toEndOf="@id/day_letter"
        android:textColor="@color/white"
        android:fontFamily="@font/euro_stile_regular"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textSize="26sp"
        tools:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>