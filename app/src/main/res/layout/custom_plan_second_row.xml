<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.codepad.foodai.ui.user_property.result.MacroCircleView
        android:id="@+id/macroCircleProtein"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:color="@color/red"
        app:isEditableIcon="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/macroCircleFats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Protein"
        app:value="0 g" />

    <com.codepad.foodai.ui.user_property.result.MacroCircleView
        android:id="@+id/macroCircleFats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:color="@color/blue_button"
        app:isEditableIcon="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/macroCircleProtein"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Fats"
        app:value="0 g" />
</androidx.constraintlayout.widget.ConstraintLayout>