<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/custom_black"
        android:paddingTop="24dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp">

        <!-- Share with Friends option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/custom_dark_gray_new"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="#1A007AFF"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share"
                        app:tint="@color/blue" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share with Friends"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/euro_stile_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share your meal details"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/euro_stile_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_back_circle"
                    android:rotation="180"
                    app:tint="@color/gray" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Share on Community option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_share_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/custom_dark_gray_new"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="#1A9370DB"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_community"
                        app:tint="@color/purple" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post to Community"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/euro_stile_bold" />

                    <TextView
                        android:id="@+id/txt_community_share_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share with food enthusiasts"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/euro_stile_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_back_circle"
                    android:rotation="180"
                    app:tint="@color/gray" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Delete option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/custom_dark_gray_new"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="#1AFF3B30"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/red" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Food"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/euro_stile_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove from history"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/euro_stile_regular" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_back_circle"
                    android:rotation="180"
                    app:tint="@color/gray" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>